 const Header = ({course}) => {
  console.log(course.name)
  return <h1>{course.name}</h1>
}

const Part = ({part, name, exercises}) => {
  console.log(part)
  return (
    <p>{part} part is called <strong>"{name}"</strong> and it contains <strong>{exercises}</strong> exercises</p>
  )
}

const Content = ({course}) => {
  return (
    <div>
      <Part part="1st" name={course.parts[0].name} exercises={course.parts[0].exercises} />
      <Part part="2nd" name={course.parts[1].name} exercises={course.parts[1].exercises} />
      <Part part="3rd" name={course.parts[2].name} exercises={course.parts[2].exercises} />
    </div>
  )
}

const Total = ({course}) => {
  const exercisesum = course.parts[0].exercises + course.parts[1].exercises + course.parts[2].exercises
  return (
    <div>
      <p>The course has <strong>{exercisesum}</strong> exercises in total</p>
    </div>
  )
}

const App = () => {
  const course = {
    name: 'Half Stack application development',
    parts: [
      {
        name: 'Fundamentals of React',
        exercises: 10
      },
      {
        name: 'Using props to pass data',
        exercises: 7
      },
      {
        name: 'State of a component',
        exercises: 14
      }
    ]
  }

  return (
    <div>
      <Header course={course} />
      <Content course={course} />
      <Total course={course} />
    </div>
  )
}

export default App
